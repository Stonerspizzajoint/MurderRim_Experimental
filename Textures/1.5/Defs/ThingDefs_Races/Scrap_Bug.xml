    <labelPlural>Scrap Bugs</labelPlural>
    <race>MD_ScrapBug</race>
    <combatPower>0</combatPower>
    <isFighter>false</isFighter>
    <ecoSystemWeight>0.2</ecoSystemWeight>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Pawn/Animal/Scrap_Bug/MD_ScrapBug</texPath>
